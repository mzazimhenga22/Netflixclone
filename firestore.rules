/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, ensuring that only authenticated users can
 * access their own data. All user-specific data is nested under a /users/{userId} path.
 *
 * Data Structure:
 * - /users/{userId}/profiles/{profileId}: Stores user profile information. Each user can have multiple profiles.
 * - /users/{userId}/profiles/{profileId}/myList/{itemId}: Stores items on a user's personal watchlist for a specific profile.
 * - /users/{userId}/profiles/{profileId}/history/{itemId}: Stores the user's watch history for a specific profile.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profiles, watchlists, and watch history.
 * - Listing user documents or other user's content is disallowed.
 * - Data validation is relaxed during the prototyping phase, focusing on authorization.
 *
 * Denormalization for Authorization:
 * The rules rely on the `userId` segment in the path to enforce ownership, avoiding the need for
 * additional `get()` calls or complex queries.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {boolean} True if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     * @param {string} userId The user ID of the document's owner.
     * @return {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces user-ownership for profile data. Each user can only access their own profiles.
     * @path /users/{userId}/profiles/{profileId}
     * @allow (create) User with ID 'user123' creates a new profile under /users/user123/profiles/profileABC with valid profile data.
     * @allow (update) User with ID 'user123' updates a profile under /users/user123/profiles/profileABC.
     * @allow (delete) User with ID 'user123' deletes a profile under /users/user123/profiles/profileABC.
     * @allow (get) User with ID 'user123' reads a profile under /users/user123/profiles/profileABC.
     * @deny (create) User with ID 'user123' attempts to create a profile under /users/user456/profiles/profileABC.
     * @deny (update) User with ID 'user123' attempts to update a profile under /users/user456/profiles/profileABC.
     * @deny (delete) User with ID 'user123' attempts to delete a profile under /users/user456/profiles/profileABC.
     * @deny (get) User with ID 'user123' attempts to read a profile under /users/user456/profiles/profileABC.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/profiles/{profileId} {
      // Read rules
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      // Write rules
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for "My List" data within a specific profile.
     * @path /users/{userId}/profiles/{profileId}/myList/{itemId}
     * @allow (create) User 'user123' creates a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @allow (update) User 'user123' updates a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @allow (delete) User 'user123' deletes a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @allow (get) User 'user123' reads a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @deny (create) User 'user456' attempts to create a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @deny (update) User 'user456' attempts to update a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @deny (delete) User 'user456' attempts to delete a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @deny (get) User 'user456' attempts to read a 'My List' item under /users/user123/profiles/profileABC/myList/item1.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/profiles/{profileId}/myList/{itemId} {
      // Read rules
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      // Write rules
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for watch history data within a specific profile.
     * @path /users/{userId}/profiles/{profileId}/history/{itemId}
     * @allow (create) User 'user123' creates a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @allow (update) User 'user123' updates a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @allow (delete) User 'user123' deletes a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @allow (get) User 'user123' reads a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @deny (create) User 'user456' attempts to create a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @deny (update) User 'user456' attempts to update a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @deny (delete) User 'user456' attempts to delete a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @deny (get) User 'user456' attempts to read a watch history item under /users/user123/profiles/profileABC/history/item1.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/profiles/{profileId}/history/{itemId} {
      // Read rules
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      // Write rules
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}